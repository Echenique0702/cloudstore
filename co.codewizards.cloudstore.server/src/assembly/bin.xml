<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>bin</id>
  <formats>
    <format>tar.gz</format>
    <format>zip</format>
  </formats>
  <baseDirectory>cloudstore</baseDirectory>
  <fileSets>
  	<fileSet>
      <directory>${basedir}/src/etc/init</directory>
      <outputDirectory>/etc/init</outputDirectory>
      <includes><include>*</include></includes>
    </fileSet>
    <fileSet>
      <directory>${basedir}/src/etc/init.d</directory>
      <outputDirectory>/etc/init.d</outputDirectory>
      <includes><include>*</include></includes>
      <fileMode>0777</fileMode>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/dependency</directory>
      <outputDirectory>/lib</outputDirectory>
      <includes><include>*</include></includes>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/co.codewizards.cloudstore.client/cloudstore/bin</directory>
      <outputDirectory>/bin</outputDirectory>
      <includes><include>**/*</include></includes>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/co.codewizards.cloudstore.client/cloudstore/etc</directory>
      <outputDirectory>/etc</outputDirectory>
      <includes><include>**/*</include></includes>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>${project.build.directory}/${project.artifactId}-${project.version}.jar</source>
      <outputDirectory>/lib</outputDirectory>
    </file>
    <file>
    	<source>${basedir}/src/bin/cloudstore-server</source>
    	<outputDirectory>/bin</outputDirectory>
    	<filtered>true</filtered>
    	<fileMode>0777</fileMode>
    </file>
    <file>
    	<source>${basedir}/src/bin/cloudstore-server.bat</source>
    	<outputDirectory>/bin</outputDirectory>
    	<filtered>true</filtered>
    </file>
  </files>
</assembly>